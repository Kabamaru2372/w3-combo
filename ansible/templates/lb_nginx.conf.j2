upstream {{ upstream_name }} {
  {% for ip in upstream_servers %}
  server {{ ip }}:{{ app_port }};
  {% endfor %}
}

server {
  listen {{ listen_port }};
  server_name _;

  location / {
    proxy_pass http://{{ upstream_name }};
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
}
